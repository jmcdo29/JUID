{
  "compilerOptions": {
    "types": ["node"],
    "outDir": "./dist",
    "baseUrl": "./src",
    "inlineSourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2017"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
